<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <div class="p-8">
    <%= form_with(model: blog_post, local: true, class: "space-y-6") do |f| %>
      <% if blog_post.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(blog_post.errors.count, "error") %> prohibited this post from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% blog_post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Title Field -->
      <div>
        <div class="flex items-center justify-between">
          <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-sm text-gray-500">Make it catchy!</span>
        </div>
        <div class="mt-1">
          <%= f.text_field :title, 
              class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-lg border-gray-300 rounded-md placeholder-gray-400",
              placeholder: "Enter your blog title here..." %>
        </div>
      </div>

      <!-- Description Field -->
      <div>
        <div class="flex items-center justify-between">
          <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-sm text-gray-500">Tell your story</span>
        </div>
        <div class="mt-1">
          <%= f.text_area :description, rows: 12,
              class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md placeholder-gray-400",
              placeholder: "Start writing your amazing story here..." %>
        </div>
      </div>

      <!-- Writing Tips -->
      <div class="bg-gradient-to-r from-indigo-50 via-purple-50 to-pink-50 rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-900">Writing Tips ðŸ’¡</h3>
        <div class="mt-2 text-sm text-gray-500">
          <ul class="list-disc space-y-1 pl-5">
            <li>Start with a compelling introduction</li>
            <li>Use clear and concise language</li>
            <li>Break your content into paragraphs</li>
            <li>Include relevant examples</li>
            <li>End with a strong conclusion</li>
          </ul>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex items-center justify-between pt-6">
        <%= link_to blog_posts_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="h-5 w-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back
        <% end %>

        <%= f.submit blog_post.new_record? ? "Publish Story" : "Update Story", 
            class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>