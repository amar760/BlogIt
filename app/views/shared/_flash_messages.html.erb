<% if notice %>
  <div class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 animate-fade-in-down"
       data-controller="alert"
       data-alert-dismiss-after-value="5000">
    <div class="bg-green-50 rounded-lg p-4 shadow-lg border border-green-200 flex items-center max-w-md">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button data-action="alert#dismiss" class="inline-flex rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none">
            <span class="sr-only">Dismiss</span>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

