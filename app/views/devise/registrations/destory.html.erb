<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-6">Delete Account</h2>
        <p class="text-sm text-gray-500 mb-4">Once you delete your account, there is no going back. Please be certain.</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :delete }) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :current_password, "Current Password", class: "block text-sm font-medium text-gray-700" %>
              <div class="text-xs text-gray-500 mb-1">Please enter your password to confirm deletion</div>
              <%= f.password_field :current_password, autocomplete: "current-password",
                  class: "mt-1 pl-3 h-8 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
            </div>

            <div class="mt-6">
              <%= f.submit "Delete my account", 
                  class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                  data: { confirm: "Are you sure? This action cannot be undone." } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Back Link -->
    <div class="mt-4 text-center">
      <%= link_to "Back", :back, 
          class: "text-sm text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>